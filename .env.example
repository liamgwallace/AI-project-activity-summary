# Timezone
TZ=Europe/London

# GitHub
GITHUB_TOKEN=ghp_xxxxx
GITHUB_USERNAME=yourusername

# Chrome (OAuth)
CHROME_CLIENT_ID=xxxxx.apps.googleusercontent.com
CHROME_CLIENT_SECRET=xxxxx
CHROME_REFRESH_TOKEN=xxxxx

# Gmail (Service Account JSON as base64 or path)
GMAIL_CREDENTIALS_JSON=/app/config/gmail-credentials.json

# Google Calendar
GCAL_CREDENTIALS_JSON=/app/config/gcal-credentials.json

# OpenRouter
OPENROUTER_API_KEY=sk-or-xxxxx

# Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=strongpassword

# Obsidian Paths (host paths)
OBSIDIAN_PROJECT_VAULT_PATH=/home/user/obsidian/Projects
OBSIDIAN_PERSONAL_VAULT_PATH=/home/user/obsidian/Personal

# Monitored filesystem paths
MONITORED_PATHS=/home/user/projects

# Processing Config
SESSION_GAP_MINUTES=60
PROCESSING_INTERVAL_HOURS=6
MAX_CONTEXT_CHARS=50000
